<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constriantLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="409dp"
        android:layout_height="741dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/q" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="260dp"
        android:layout_height="60dp"
        android:layout_marginTop="44dp"
        android:layout_marginBottom="668dp"
        android:padding="10dp"
        android:text="Registration Page"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.485" />

    <Button
        android:id="@+id/enterButton"
        android:layout_width="113dp"
        android:layout_height="56dp"
        android:layout_marginTop="350dp"
        android:layout_marginBottom="333dp"
        android:onClick="clickMe"
        android:text="Enter"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="357dp"
        android:layout_height="548dp"
        android:layout_marginTop="165dp"
        android:layout_marginBottom="18dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="invisible">

        <EditText
            android:id="@+id/nameText"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:ems="10"
            android:hint="Enter name here"
            android:inputType="textPersonName"
            android:padding="20dp"
            android:textColor="#EFECEC"
            android:textColorHint="#EDE7E7"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/emailText"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:ems="10"
            android:hint="Enter email adress here"
            android:inputType="textEmailAddress"
            android:padding="20dp"
            android:textColor="#EFECEC"
            android:textColorHint="#EDE7E7"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/passwordText"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:ems="10"
            android:hint="Enter password here"
            android:inputType="textPassword"
            android:padding="20dp"
            android:textColor="#EFECEC"
            android:textColorHint="#EDE7E7"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/dobText"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:ems="10"
            android:hint="Enter date of birth here"
            android:inputType="date"
            android:padding="20dp"
            android:textColor="#EFECEC"
            android:textColorHint="#EDE7E7"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/mobileText"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:ems="10"
            android:hint="Enter phone number "
            android:inputType="phone"
            android:padding="20dp"
            android:textColor="#EFECEC"
            android:textColorHint="#EDE7E7"
            android:textSize="30sp" />

        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:padding="20dp"
            android:text="Terms and Conditiions"
            android:textColor="#EFECEC"
            android:textColorHint="#EDE7E7"
            android:textSize="14sp" />

        <Button
            android:id="@+id/doneButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="done"
            android:text="Done"
            android:textSize="24sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
